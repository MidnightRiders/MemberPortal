{
  "name": "midnight-riders-member-portal",
  "version": "1.0.0",
  "description": "Member Portal for Midnight Riders; migrating from HAML to Preact",
  "license": "MIT",
  "scripts": {
    "build:css": "sass ./app/assets/stylesheets/entrypoints:./app/assets/builds --style=compressed --load-path=node_modules",
    "typecheck": "tsc --noEmit",
    "check": "npm-run-all --parallel --continue-on-error --aggregate-output typecheck lint",
    "format": "npm-run-all --parallel --continue-on-error --aggregate-output format:es format:css",
    "format:es": "f() { eslint --fix --format unix ${1:-app/javascript}; }; f",
    "format:css": "f() { stylelint --fix --formatter unix ${1:-'app/javascript/**/*.css'}; }; f",
    "lint": "npm-run-all --parallel --continue-on-error --aggregate-output lint:es lint:css",
    "lint:es": "f() { eslint --format unix ${1:-app/javascript}; }; f",
    "lint:css": "f() { stylelint --formatter unix ${1:-'app/javascript/**/*.css'}; }; f"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@types/jquery": "^3.5.14",
    "@types/js-cookie": "^3.0.2",
    "@types/node": "^18.11.18",
    "@types/postcss-import": "^14.0.0",
    "@types/postcss-mixins": "^9.0.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "postcss-import": "^15.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.0",
    "postcss-variables": "^1.1.1",
    "prettier": "^2.8.3",
    "rollup-plugin-gzip": "^3.1.0",
    "rollup-plugin-strip-prop-types": "^1.0.3",
    "rollup-plugin-visualizer": "^5.9.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-full-reload": "^1.0.5",
    "vite-plugin-ruby": "^3.1.2"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@nathanvda/cocoon": "^1.2.14",
    "@preact/signals": "^1.1.3",
    "@sentry/browser": "^7.28.1",
    "@stripe/react-stripe-js": "^1.16.1",
    "@stripe/stripe-js": "^1.46.0",
    "bootstrap-icons": "^1.10.3",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.7",
    "esbuild": "^0.16.4",
    "jquery-ujs": "^1.2.3",
    "js-cookie": "^3.0.1",
    "logrocket": "^3.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "sass": "^1.56.2",
    "wouter-preact": "^2.9.0"
  },
  "type": "module"
}
