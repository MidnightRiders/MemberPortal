- content_for :title do
  Edit User
  %small= link_to 'Return', (resource == current_user ? root_url : users_path)

.row
  .column= render partial: 'users/form', locals: { user: resource, devise: true }

-# if current_user == resource
  .row
    %hr
    .medium-6.medium-centered.columns
      = button_to 'Cancel my membership', registration_path(resource_name), class: 'button alert tiny right', data: { confirm: 'Are you sure you want to cancel your Riders membership?' }, method: :delete
      %h3 Cancelation
      %p.hint
        %strong Note:
        there are no refunds for canceled memberships.
