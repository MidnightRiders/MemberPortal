%h2 Change your password
= form_for(resource, as: resource_name, url: main_app.user_password_path, html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .row
    .large-4.columns
      = f.label :password, 'New password', class: 'inline'
    .large-8.columns
      = f.password_field :password, autofocus: true
  .row
    .large-4.columns
      = f.label :password_confirmation, 'Confirm new password', class: 'inline'
    .large-8.columns
      = f.password_field :password_confirmation
  .row.actions
    .column
      = f.button :submit, class: 'button' do
        Change my password
