.row
  .medium-4.columns
    %h2 Sign in
  .medium-8.columns.text-right.small-only-text-left
    %h4.subheader
      Havenâ€™t received your login information?
      = succeed '.' do
        = link_to 'Email&nbsp;us'.html_safe, 'mailto:webczar@midnightriders.com?subject=Member%20Portal%20Access'
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .row
    .medium-4.columns
      = f.label :username, class: 'inline'
    .medium-8.columns
      = f.text_field :username, autofocus: true, autocapitalize: 'off', autocorrect: 'off'
  .row
    .medium-4.columns
      = f.label :password, class: 'inline' do
        = resource.class.human_attribute_name(:password)
        %br
        %small= link_to 'Forgot your password?', new_password_path(resource_name)
    .medium-8.columns
      = f.password_field :password
  - if devise_mapping.rememberable?
    .row
      .medium-8.columns.right
        = f.check_box :remember_me
        = f.label :remember_me
  .row.actions
    .small-12.columns
      = f.button :submit, class: 'button' do
        Sign in
        = icon 'arrow-right fa-fw'
