- if controller_name != 'sessions'
  = link_to 'Sign in', main_app.new_user_session_path
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to 'Sign up', main_app.new_user_registration_path
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to 'Forgot your password?', main_app.new_user_password_path
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to 'Didn\'t receive confirmation instructions?', main_app.new_user_confirmation_path
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to 'Didn\'t receive unlock instructions?', main_app.new_user_unlock_path
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{provider.to_s.titleize}", main_app.omniauth_authorize_path(resource_name, provider)
    %br/
