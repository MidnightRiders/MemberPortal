.row
  .large-4.columns
    = label_tag :roles, can?(:manage, User) ? 'Roles' : 'Membership Type'
  .large-8.columns
    .row
      - Membership::ROLES.each do |role|
        - if (current_user && current_user.role?('admin')) || role.in?(['individual', 'family'])
          .medium-6.columns.left
            = check_box_tag 'user[memberships][][]', role.id, @user.role?(role) || (params[:user] && params[:user][:role_ids].include?(role.id.to_s)), name: 'user[role_ids][]', id: "user_role_ids_#{role.id}"
            = label_tag "user_role_ids_#{role.id}", role.titleize