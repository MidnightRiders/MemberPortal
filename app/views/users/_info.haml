.row
  .columns{ class: "#{'medium-8' if can?(:destroy, User)}" }
    %h1
      - if user == current_user
        = link_to 'https://en.gravatar.com/support/what-is-gravatar/', target: '_blank' do
          = image_tag user.gravatar, class: 'gravatar', alt: 'gravatar', title: 'To change your user avatar, visit gravatar.com'
      - else
        = image_tag(user.gravatar, class: 'gravatar', alt: 'gravatar')
      = user.first_name
      %strong= user.last_name
      %small
        %br
        @#{user.username}
        - if can? :edit, user
          %small (#{link_to 'edit', edit_user_path(user)})
    %h3.subheader
      = t '.member_since_year', year: user.member_since || "at least #{user.created_at.year}"
  - if can? :destroy, User
    .medium-4.columns.text-right
      = link_to user, class: 'button secondary tiny', :method => :delete, :data => { :confirm => "Are you sure you wish to destroy @#{user.username}?" }, title: t(:destroy) do
        = icon 'trash-o fa-lg fa-fw'

%hr
%h4 #{t '.membership_history'}:
%table.expand
  %thead
    %tr
      %th.small-4= Membership.human_attribute_name(:year)
      %th.small-4= current_user.leadership_or_admin? ? Membership.human_attribute_name(:privileges) : 'Board'
      - if can? :show, user.current_membership
        %th.small-4= t :actions
  %tbody
    - user.memberships.reverse.each do |membership|
      - membership = membership.decorate
      %tr{ class: ('highlight' if membership == user.current_membership)}
        %td
          %strong= membership.year
        %td
          = membership.list_privileges(false, current_user.leadership_or_admin?)
        - if can? :show, user.current_membership
          %td
            - if membership == user.current_membership
              = link_to user_membership_path(user,membership), class: "button expand tiny #{'split' if can?(:cancel_subscription, membership)}", title: t(:edit) do
                = t :view
                - if can? :cancel_subscription, membership
                  %span{ data: { dropdown: "dropdown-membership-#{membership.id}" } }
              - if can? :cancel_subscription, membership
                %ul.f-dropdown{ id: "dropdown-membership-#{membership.id}", data: { dropdown_content: true } }
                  %li
                    = link_to cancel_user_membership_path(user, membership), data: { method: :patch, confirm: t('memberships.cancel_message') } do
                      = t 'memberships.cancel'

%hr
- if current_user==user
  .row
    .small-6.columns
      - if (lastmatch = revs.last_match) && can?(:vote, MotM, match_id: lastmatch.id)
        = lastmatch.decorate.mot_m_button('small secondary expand', true)
    .small-6.columns
      - if (nextmatch = revs.next_match) && can?(:vote, RevGuess, match_id: nextmatch.id)
        = nextmatch.decorate.rev_guess_button('small secondary expand', true)

.table
  .thead
    .tr
      .thd.text-center
        %h4 #{RevGuess.model_name.human} #{RevGuess.human_attribute_name(:score)}:
      .thd.text-center
        %h4 #{PickEm.model_name.human} #{PickEm.human_attribute_name(:score)}:
  .tbody
    .tr
      .td.text-center
        %p
          = user.rev_guesses.where(matches: { season: Date.current.year }).score
          %small (#{user.rev_guesses.where(matches: { season: Date.current.year }).select{|r| r.match.complete? }.length} games)
      .td.text-center
        %p
          = user.pick_ems.where(matches: { season: Date.current.year }).score
          %small (#{user.pick_ems.where(matches: { season: Date.current.year }).select{|r| r.match.complete? }.length} games)

%hr

- if can? :manage, user
  .row
    .medium-4.large-2.columns
      %label Address:
    .medium-8.large-10.columns
      %p
        - if user.address.present?
          = user.address.gsub(/\n/,'<br>').html_safe
          %br
          #{user.city},
          = user.state
          = user.postal_code
        - else
          %em Not provided
  - if user.phone
    .row
      .medium-4.large-2.columns
        %label #{User.human_attribute_name(:phone)}:
      .medium-8.large-10.columns
        %p= number_to_phone(user.phone,delimiter:'.')
  .row
    .medium-4.large-2.columns
      %label Email:
    .medium-8.large-10.columns
      %p= link_to user.email, "mailto:#{user.email}"
  - if can? :grant_privileges, Membership
    .row
      .medium-4.large-2.columns
        %label #{Membership.human_attribute_name(:privileges)}:
      .medium-8.large-10.columns
        %p= user.list_current_privileges