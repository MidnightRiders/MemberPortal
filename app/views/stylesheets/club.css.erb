<%- @clubs.each do |club| -%>
<% abbrv = club.abbrv.downcase %>
.club.<%=abbrv%> {
    background-color: <%='#' + club.primary_color%>;
    border-right-color: <%='#' + club.secondary_color%>;
    border-left-color: <%='#' + club.accent_color%>;
}
  .club.<%=abbrv%>, .club.<%=abbrv%> * {
      color: <%='#' + get_contrast_yiq(club.primary_color)%>;
  }
  .club.<%=abbrv%>.light {
      border-bottom: 2px solid <%='#' + club.secondary_color%>;
  }
    .club.<%=abbrv%>.light, .club.<%=abbrv%>.light * {
        color: <%='#' + club.primary_color%>;
    }
<%- if club.crest.blank? %>
.crest.<%=abbrv%>, .pre-crest.<%=abbrv%>::before { display: none; }
<%- else %>
.crest.<%=abbrv%>, .pre-crest.<%=abbrv%>::before {
  background-image: url('<%=club.crest.url(:standard)%>');
}
  .crest.<%=abbrv%>.small, .pre-crest.<%=abbrv%>.small::before {
    background-image: url('<%=club.crest.url(:thumb)%>');
  }
<%- end %>
        
.primary.<%=abbrv%> {
    color: <%='#' + club.primary_color%>;
}
  .primary.solid.<%=abbrv%> {
      background-color: <%='#' + club.primary_color%>;
      color: <%='#' + get_contrast_yiq(club.primary_color)%>;
  }
.primary-bg.<%=abbrv%>, .td.primary-bg.<%=abbrv%>, .tr.primary-bg.<%=abbrv%> {
    background-color: <%='#' + club.primary_color%>;
    color: <%='#' + get_contrast_yiq(club.primary_color)%>;
}
.primary-bg.<%=abbrv%> small {
    color: <%='#' + get_contrast_yiq(club.primary_color)%>;
}
.button.primary-bg.<%=abbrv%>:hover, a.choice.primary-bg.<%=abbrv%>:hover {
    background-color: <%='#' + darken(club.primary_color, 0.75)%>;
}
.primary-border.<%=abbrv%> {
    border-color: <%='#' + club.primary_color%>;
}
.secondary.<%=abbrv%> {
    color: <%='#' + club.secondary_color%>;
}
.secondary-bg.<%=abbrv%>, .td.secondary-bg.<%=abbrv%>, .tr.secondary-bg.<%=abbrv%> {
    background-color: <%='#' + club.dark_compliment%>;
    color: <%='#' + get_contrast_yiq(club.dark_compliment)%>;
}
.secondary-border.<%=abbrv%> {
    border-color: <%='#' + club.dark_compliment%>;
}
<%- end %>
