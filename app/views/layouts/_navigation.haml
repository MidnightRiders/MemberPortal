.contain-to-grid.sticky
  %nav.top-bar{ data: { topbar: true }}
    %ul.title-area
      %li.name
        %h1= link_to 'Midnight Riders', root_path

    %section.top-bar-section
      %ul.right
        - if user_signed_in?
          - if current_user.role?('admin') || current_user.role?('executive_board')
            %li.has-dropdown
              %a Administrative
              %ul.dropdown
                - if can? :view, :users
                  %li= link_to 'Users', users_path
                - if can? :view, :clubs
                  %li= link_to 'Clubs', clubs_path
          %li= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'button secondary'
        - else
          %li= link_to 'Sign Up', new_user_registration_path
          %li= link_to 'Sign In', new_user_session_path