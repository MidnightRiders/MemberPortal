.contain-to-grid.sticky
  %nav.top-bar{ data: { topbar: true }}
    %ul.title-area
      %li.name
        %h1= link_to 'Midnight Riders', root_path

    %section.top-bar-section
      %ul.left
        %li.has-dropdown
          %a Sites
          %ul.dropdown
            %li= link_to 'Website', 'http://MidnightRiders.com', target: '_blank'
            %li= link_to 'Facebook', 'http://facebook.com/MidnightRiders', target: '_blank'
            %li= link_to 'Twitter', 'http://twitter.com/MidnightRiders', target: '_blank'
      %ul.right
        - if user_signed_in?
          %li.has-dropdown
            %a Games
            %ul.dropdown
              %li
                %a MotM
              %li
                %a Pick â€™Em
              %li
                %a RevGuess
          %li= link_to 'My Account', edit_user_registration_path(current_user)
          - if current_user.role?('admin') || current_user.role?('executive_board')
            %li.has-dropdown
              %a Administrative
              %ul.dropdown
                - if can? :view, :users
                  %li= link_to 'Users', users_path
                - if can? :view, :clubs
                  %li= link_to 'Clubs', clubs_path
                - if can? :view, :matches
                  %li= link_to 'Matches', matches_path
          %li= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'button secondary'
        - else
          %li= link_to 'Sign Up', new_user_registration_path
          %li= link_to 'Sign In', new_user_session_path