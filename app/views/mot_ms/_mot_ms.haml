%ul.table
  - if mot_ms.empty?
    %li.tr
      .td No votes cast yet
  - else
    .thead
      %li.tr
        .thd
        .thd Player
        .thd.numeric 1
        .thd.numeric 2
        .thd.numeric 3
        .thd.numeric Points
    - mot_ms.each_with_index do |ms,i|
      - ms[1].each_with_index do |mot_m,j|
        %li.tr
          .td.numeric
            - if j == 0
              = i + 1
            - else
              %small= i + 1
          .td
            = link_to mot_m do
              = mot_m.first_name
              %strong= mot_m.last_name
          .td.numeric= mot_m.motm_firsts.length
          .td.numeric= mot_m.motm_seconds.length
          .td.numeric= mot_m.motm_thirds.length
          .td.numeric= mot_m.mot_m_total || 0