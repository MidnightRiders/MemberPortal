.row.actions
  .small-12.columns.text-right
    = link_to (mot_m_for(@match) ? 'Change' : 'Cast') + ' MotM Vote', mot_m_path_for(@match), class: 'button'
    - if can? :edit, @match
      = link_to 'Edit', edit_match_path(@match), class: 'button secondary'
%p
  %b Home team:
  = @match.home_team.name
%p
  %b Away team:
  = @match.away_team.name
%p
  %b Kickoff:
  = @match.kickoff
%p
  %b Location:
  = @match.location
%p
  %b Score:
  = @match.score
