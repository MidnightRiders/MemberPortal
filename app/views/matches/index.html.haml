- content_for :title, 'Match listings for the week of' + @start_date.strftime('%_m.%-d.%Y')

.row.actions
  .medium-6.columns
    = link_to matches_path(date: @start_date - 7.days), class: 'button secondary small' do
      &laquo;
      Previous Week
    - if @start_date != Date.today.beginning_of_week
      = link_to 'This Week', matches_path, class: 'button small'
    = link_to matches_path(date: @start_date + 7.days), class: 'button secondary small' do
      Next Week
      &raquo;
  .medium-6.columns.text-right
    - if can? :manage, Match
      = link_to import_matches_path, class: 'button secondary small' do
        Import/Update Matches
    = link_to new_match_path, class: 'button small' do
      New Match

.table
  .tr
    .thd Home team
    .thd Away team
    .thd Kickoff
    .thd Location
    .thd Score
    .thd

  - @matches.each do |match|
    .tr
      .td{ class: ('highlight' if match.home_team == revs)}= match.home_team.name
      .td{ class: ('highlight' if match.away_team == revs)}= match.away_team.name
      .td.text-center= match.kickoff.strftime('%_m.%-d %l:%M%P')
      .td= match.location
      .td.text-center
        = match.score
      .td
        = link_to 'Show', match
        = link_to 'MotM', new_match_mot_m_path(match)
        - if can? :edit, match
          = link_to 'Edit', edit_match_path(match)
        - if can? :destroy, match
          = link_to 'Destroy', match, :method => :delete, :data => { :confirm => 'Are you sure?' }
