%ul.button-group.even-2
  %li
    - if last_match.present? && can?(:vote, MotM, match_id: last_match.id)
      = last_match.decorate.mot_m_button('small expand no-margin-bottom', true)
  %li
    - if next_match.present? && can?(:vote, RevGuess, match_id: next_match.id)
      = next_match.decorate.rev_guess_button('small expand no-margin-bottom', true)
