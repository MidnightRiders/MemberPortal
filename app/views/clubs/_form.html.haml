= form_for @club do |f|
  - if @club.errors.any?
    #error_explanation
      %h2= "#{pluralize(@club.errors.count, "error")} prohibited this club from being saved:"
      %ul
        - @club.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :conference
    = f.text_field :conference
  .field
    = f.label :primary_color
    = f.text_field :primary_color
  .field
    = f.label :secondary_color
    = f.text_field :secondary_color
  .field
    = f.label :accent_color
    = f.text_field :accent_color
  .field
    = f.label :abbrv
    = f.text_field :abbrv
  .actions
    = f.submit 'Save'
