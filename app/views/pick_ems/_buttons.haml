  .small-4.columns.away
    = link_to match.away_team.abbrv, vote_match_pick_ems_path(match), remote: true, method: :post, data: { params: { pick_em: { result: PickEm::RESULTS[:away], user_id: current_user.id, match_id: match.id }}.to_param }, class: match.away_team.abbrv.downcase + ' primary-bg button expand tiny' + (current_user.pick_for(match) == PickEm::RESULTS[:away] ? ' picked' : '')