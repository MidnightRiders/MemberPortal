              = u.username
          .td.numeric
            = u.pick_em_score
            %small
              \/
              = completed_pick_ems
          .td.numeric
            #{u.pick_em_score.to_f / (completed_pick_ems == 0 ? 1 : completed_pick_ems).to_f * 100.0}%
          - last = u.pick_em_score
    .row
      .small-12.columns.text-right
