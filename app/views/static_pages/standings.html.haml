- content_for :title, 'Standings'

.row
  .medium-6.columns
    %h2 RevGuess Standings
    %ul.table
      .thead
        %li.tr
          .thd
          .thd User
          .thd Score
          .thd %
      - count = ((params[:rev_guess_p]||1).to_i-1) * 25
      - last = nil
      - @rev_guess_standings.each_with_index do |u,i|
        - completed_rev_guesses = u.rev_guesses.select{|rg| rg.match.complete? }.size
        %li.tr
          .td.text-center= last != u.rev_guess_score ? count += 1 : ''
          .td
            = link_to u do
              = image_tag(u.gravatar, class: 'gravatar', alt: 'gravatar')
              = u.username
          .td.numeric
            = u.rev_guess_score
            %small
              \/
              = completed_rev_guesses * 5
          .td.numeric
            #{u.rev_guess_score.to_f / (completed_rev_guesses == 0 ? 1 : completed_rev_guesses * 5.0) * 100.0}%
          - last = u.rev_guess_score
    .row
      .small-12.columns
        = will_paginate(@rev_guess_standings, param_name: 'rev_guess_p')
  .medium-6.columns
    %h2 Pick â€™Em Standings
    %ul.table
      .thead
        %li.tr
          .td
          .td User
          .td Score
          .td %
      - count = ((params[:pick_em_p]||1).to_i-1) * 25
      - last = nil
      - @pick_em_standings.each_with_index do |u,i|
