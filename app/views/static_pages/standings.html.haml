- content_for :title, 'Standings'

.row
  .medium-6.columns
    %h2 RevGuess Standings
    %ul.table
      .thead
        %li.tr
          .thd
          .thd User
          .thd Score
      - count = ((params[:rev_guess_p]||1).to_i-1) * 25 + 1
      - last = nil
      - @rev_guess_standings.each_with_index do |u,i|
        %li.tr
          .td.text-center= last != u.rev_guess_score ? count + i : ''
          .td= link_to u.username, u
          .td.numeric= u.rev_guess_score
          - last = u.rev_guess_score
    .row
      .small-12.columns
        = will_paginate(@rev_guess_standings, param_name: 'rev_guess_p')
  .medium-6.columns
