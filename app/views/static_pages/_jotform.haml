:javascript
  JotForm.init();

#scarf-vote-modal.reveal-modal.medium{ data: { reveal: true } }
  .close-reveal-modal &#215;
  #scarf-vote{ style: 'max-height: 100%; overflow-y: auto;' }
    %h2.text-center 2015 Board Nomination
    %form.jotform-form#50155372413952{'accept-charset' => 'utf-8', action: 'http://submit.jotformpro.com/submit/50155372413952/', method: 'post', name: 'form_50155372413952', target: '_blank'}
      %input{name: 'formID', type: 'hidden', value: '50155372413952'}
      .form-all
        %ul.form-section.no-style
          %li.row#id_5.form-line.jf-required{data: { type: 'control_fullname' }}
            .medium-4.columns
              %label.inline#label_5.form-label.form-label-left.form-label-auto{for: 'input_5'}
                Your Full Name
            .medium-8.columns
              #cid_5.form-input.jf-required.row
