                  %input#first_5.form-textbox{class: 'validate[required]', name: 'q5_yourFull[first]', size: '10', type: 'text', placeholder: 'First Name', value: current_user.first_name }
                %span.form-sub-label-container.small-6.column
                  %input#last_5.form-textbox{class: 'validate[required]', name: 'q5_yourFull[last]', size: '15', type: 'text', placeholder: 'Last Name', value: current_user.last_name }
          %li.row#id_3.form-line.jf-required{data: { type: 'control_email' }}
            .medium-4.columns
              %label.inline#label_3.form-label.form-label-left.form-label-auto{for: 'input_3'}
                Your E-mail
            .medium-8.columns
              #cid_3.form-input.jf-required
                %input#input_3.form-textbox{class: 'validate[required, Email]', name: 'q3_yourEmail3', size: '30', type: 'email', value: current_user.email }
          %li.row#id_6.form-line.jf-required{data: { type: 'control_dropdown' }}
            .medium-4.columns
              %label.inline#label_6.form-label.form-label-left.form-label-auto{for: 'input_6'}
                Position Nominating For
            .medium-8.columns
              #cid_6.form-input.jf-required
                %select#input_6.form-dropdown{class: 'validate[required]', name: 'q6_positionNominating'}
                  %option{value: ''}
                  %option{value: 'At Large Board'} At-Large Board
                  %option{value: 'Social Media Chair'} Social Media Chair
                  %option{value: 'Merchandise Coordinator'} Merchandise Coordinator
                  %option{value: 'Philanthropy Chairperson'} Philanthropy Chairperson
                  %option{value: 'Membership Secretary'} Membership Secretary
                  %option{value: 'Treasurer'} Treasurer
                  %option{value: 'Recording Secretary'} Recording Secretary
                  %option{value: 'President'} President
          %li.row#id_4.form-line.jf-required{data: { type: 'control_fullname' }}
            .medium-4.columns
              %label.inline#label_4.form-label.form-label-left.form-label-auto{for: 'input_4'}
                Name of Person you are Nominating
            .medium-8.columns
              #cid_4.form-input.jf-required.row
                .small-6.columns
                  %span.form-sub-label-container
                    %input#first_4.form-textbox{class: 'validate[required]', name: 'q4_nameOf[first]', size: '10', type: 'text', placeholder: 'First Name'}
                .small-6.columns
                  %span.form-sub-label-container
                    %input#last_4.form-textbox{class: 'validate[required]', name: 'q4_nameOf[last]', size: '15', type: 'text', placeholder: 'Last Name'}
          %li.row#id_8.form-line{data: { type: 'control_email' }}
            .medium-4.columns
              %label.inline#label_8.form-label.form-label-left.form-label-auto{for: 'input_8'} Their email (if known)
            .medium-8.columns
              #cid_8.form-input.jf-required
                %input#input_8.form-textbox{class: 'validate[Email]', name: 'q8_theirEmail', size: '30', type: 'email', value: ''}
          %li#id_2.form-line{data: { type: 'control_button' }}
            #cid_2.text-right
              %button#input_2.form-submit-button{type: 'submit'}
                = icon 'check'
                Submit Nomination
          %li.hide
            Should be Empty:
            %input{name: 'website', type: 'text', value: ''}
