.row
  .large-4.columns
    %h3 Invite Family Member
  .large-8.columns
    = form_tag invite_relative_path(@membership), method: :post do
      .row
        .medium-4.columns
          = label_tag :email, Membership.human_attribute_name(:email), class: 'inline'
        .medium-8.columns
          = email_field_tag :email, placeholder: Membership.human_attribute_name(:email)
      .row
        .column.text-right= submit_tag 'Invite', class: 'button'
